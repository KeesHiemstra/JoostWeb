@page
@model Joost.Pages.Contact.CalendarModel
@using Joost.Data

@{
	ViewData["Title"] = "Calendar contact";
}

<h2>Calendar</h2>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Contact[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Contact[0].City)
			</th>
			<th>
				Birth date
			</th>
			<th>
				Age
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Contact)
		{
			<tr>
				<td>
					@item.Name
				</td>
				<td>
					@item.City
				</td>
				<td>
					@item.BirthDate.DisplayDayMonthName()
				</td>
				<td>
					@item.BirthDate.DisplayAge(item.IsBirthYear, item.DeathDate)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.ContactID">Edit</a>
				</td>
			</tr>
		}
	</tbody>
</table>
