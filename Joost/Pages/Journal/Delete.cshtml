@page "{ID:int}"
@model Joost.Pages.Journal.DeleteModel
@{
	ViewData["Title"] = "Delete";
}

<h2>Delete journal</h2>

<h3>Are you sure you want to delete entry #@Model.Journal.LogID?</h3>
<div class="row">
	<div>
		<section>
			<h3>Are you sure you want to delete this?</h3>

			<hr />
			<dl class="dl-horizontal">
				<dt>
					@Html.DisplayNameFor(model => model.Journal.DTStart)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Journal.DTStart)
				</dd>
				<dt>
					@Html.DisplayNameFor(model => model.Journal.Message)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Journal.Message)
				</dd>
				<dt>
					@Html.DisplayNameFor(model => model.Journal.Event)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Journal.Event)
				</dd>
			</dl>

			<form method="post">
				<input type="hidden" asp-for="Journal.LogID" />
				<div class="form-group">
					<button type="submit" asp-page-handler="Cancel" class="btn btn-default">Cancel</button>&nbsp;
					<button type="submit" asp-page-handler="Delete" class="btn btn-info">Delete</button>
				</div>
			</form>
		</section>
	</div>
</div>
